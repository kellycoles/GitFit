@model IEnumerable<GitFit.Models.Biometric>

@{
    ViewData["Title"] = "Index";
}
    <div class="spacer"></div>
<h1>Biometrics</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BiometricId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BiometricId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BiometricId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
